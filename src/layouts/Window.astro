---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="window">
	<div class="content">
		<slot />
	</div>
</div>

<style>
	html, body {
		height: 100%;
		margin: 0;
		padding: 0;
		overflow: hidden;
		background-color: rgba(13, 13, 13, 1);
	}

	.window {
		position: absolute;
		top: 30px;
		left: 20%;
		bottom: 30px;
		right: 20%;
		border: 3px solid #cfbfa3;
		border-radius: 15px;
		box-sizing: border-box;
		display: flex;
		pointer-events: none;
		overflow: hidden;
	}

	.content {
		width: 100%;
		height: 100%;
		position: relative;
		background-color: rgba(13, 13, 13, 1);
		color: #fff;
		padding: 20px;
		z-index: 1;
		overflow: auto;
	}
</style>
